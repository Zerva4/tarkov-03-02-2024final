<div class="character__text">
    <span class="value-stock">{{ 'Класс' |trans({}, 'front.items') }}</span>
    <span class="value-properties">{{ item.properties.class }}</span>
</div>
<div class="character__text">
    <span class="value-stock">{{ 'Прочность' |trans({}, 'front.items') }}</span>
    <span class="value-properties">{{ item.properties.durability }}</span>
</div>
<div class="character__text">
    <span class="value-stock">{{ 'Стоимость ремонта (1 ед.)' |trans({}, 'front.items') }}</span>
    <span class="value-properties">{{ item.properties.repairCost }}</span>
</div>
<div class="character__text">
    <span class="value-stock">{{ 'Снижение скорости' |trans({}, 'front.items') }}</span>
    <span class="value-properties">{{ item.properties.speedPenalty }} %</span>
</div>
<div class="character__text">
    <span class="value-stock">{{ 'Снижение поворота' |trans({}, 'front.items') }}</span>
    <span class="value-properties">{{ item.properties.turnPenalty }} %</span>
</div>
<div class="character__text">
    <span class="value-stock">{{ 'Снижение эргономик' |trans({}, 'front.items') }}</span>
    <span class="value-properties">{{ item.properties.ergoPenalty }} %</span>
</div>
{% if item.properties.headZones is not empty %}
<div class="character__text">
    <span class="value-stock">{{ 'Защита зон головы' |trans({}, 'front.items') }}</span>
    <span class="value-properties" style="text-align: right">{% for zone in item.properties.headZones %}{{ zone }}<br />{% endfor %}</span>
</div>
{% endif %}
<div class="character__text">
    <span class="value-stock">{{ 'Блокировка наушников' |trans({}, 'front.items') }}</span>
    <span class="value-properties">{% if item.properties.blockHeadset %}{{ 'Да' | trans({}, 'front.items') }}{% else %}{{ 'Нет' | trans({}, 'front.items') }}{% endif %}</span>
</div>
<div class="character__text">
    <span class="value-stock">{{ 'Защита от ослепления' |trans({}, 'front.items') }}</span>
    <span class="value-properties">{% if item.properties.blindnessProtection %}{{ 'Да' | trans({}, 'front.items') }}{% else %}{{ 'Нет' | trans({}, 'front.items') }}{% endif %}</span>
</div>
<div class="character__text">
    <span class="value-stock">{{ 'Рикошет X' |trans({}, 'front.items') }}</span>
    <span class="value-properties">{{ item.properties.ricochetX }}</span>
</div>
<div class="character__text">
    <span class="value-stock">{{ 'Рикошет Y' |trans({}, 'front.items') }}</span>
    <span class="value-properties">{{ item.properties.ricochetY }}</span>
</div>
<div class="character__text">
    <span class="value-stock">{{ 'Рикошет Z' |trans({}, 'front.items') }}</span>
    <span class="value-properties">{{ item.properties.ricochetZ }}</span>
</div>
<div class="character__text">
    <span class="value-stock">{{ 'Тип защиты' |trans({}, 'front.items') }}</span>
    <span class="value-properties">{{ item.properties.armorType | trans({}, 'front.items') }}</span>
</div>
<div class="character__text">
    <span class="value-stock">{{ 'Заброневой урон' |trans({}, 'front.items') }}</span>
    <span class="value-properties">{{ item.properties.bluntThroughput }}</span>
</div>