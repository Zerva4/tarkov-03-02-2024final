<div class="now">
    <div class="main_information">
        {% if newsMain is not empty %}
        <div class="windows" {{ stimulus_controller('tab-windows')}} >
            {% for article in newsMain %}
                {% if article.slug == 'main-patch' %}
            <div class="window active" id="window_1">
                <div class="name">
                    {{ article.title }}
                </div>
                <div class="subname">
                    {{ 'Список изменений от'|trans({}, 'front.home') }}{{ article.createdAt|date("d.m.Y") }} :
                </div>
                <div class="contains">
                    <div class="text">
                        {{ article.description|striptags('')|raw }}
                    </div>
                    <div class="overinfo">
                        <a href="#">Подробнее...</a>
                    </div>
                </div>
            </div>
                {% else %}
                    {% endif %}
            {% endfor %}
                {% for article in newsMain %}
                {% if article.slug == 'main-update' %}
            <div class="window" id="window_2">
                <div class="name">
                    {{ article.title }}
                </div>
                <div class="subname">
                    {{ 'Список изменений от'|trans({}, 'front.home') }}{{ article.createdAt|date("d.m.Y") }} :
                </div>
                <div class="contains">
                    <div class="text">
                        {{ article.description|striptags('')|raw }}
                    </div>
                    <div class="overinfo">
                        <a href="#">
                            Подробнее...</a>
                    </div>
                </div>
            </div>
                {% else %}
                {% endif %}
                {% endfor %}
        </div>
        {% endif %}
        {% if newsCategories is not empty %}
        <div class="selects">
            {% for category in newsCategories %}
                <div class="select {% if loop.index == 1 %}active{% endif %}" data-tab="window_{{ loop.index }}">
                    {{ category.name }}
                </div>
            {% endfor %}
        </div>
        {% endif %}
    </div>
</div>